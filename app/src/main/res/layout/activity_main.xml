<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView1"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/floatingActionButton"
            app:layout_constraintEnd_toEndOf="@+id/listView1"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            android:onClick="addItem"
            app:layout_constraintBottom_toBottomOf="@+id/listView1"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/floatingActionButton2"
            android:layout_marginBottom="8dp"
            android:onClick="editItem"
            app:layout_constraintBottom_toBottomOf="@+id/listView1"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"/>

</android.support.constraint.ConstraintLayout>